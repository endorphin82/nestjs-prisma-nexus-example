{
  "name": "nest-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "1_db:up": "docker-compose up",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only -P nexus.tsconfig.json ./src/graphql/schema-config",
    "generate:prisma": "npx prisma generate",
    "prebuild": "rimraf dist",
    "build": "nest build", 
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node-dev --no-notify --respawn --transpile-only src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:save": "npx prisma migrate save --name init --experimental",
    "migrate:up": "npx prisma migrate up --experimental",
    "migrate": "yarn -s migrate:save && yarn -s migrate:up",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.4.6",
    "@nestjs/platform-express": "^7.0.0",
    "@nexus/schema": "^0.14.0",
    "@prisma/client": "^2.1.3",
    "apollo-server-express": "^2.15.0",
    "bcrypt": "^5.0.0",
    "cuid": "^2.1.8",
    "graphql": "14.6",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "nexus-prisma": "^0.15.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@prisma/cli": "^2.1.3",
    "@types/express": "^4.17.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "25.2.3",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
