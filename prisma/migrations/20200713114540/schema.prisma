datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id                      String    @id @default(cuid())
    email                   String    @unique
    password                String
    firstName               String?
    middleName              String?
    lastName                String?
    roles                   UserRole[]
    accounts                Account[]
}

model Account {
    id            String        @id @default(cuid())
    createdAt     DateTime      @default(now())
    name          String
    currency      Currency      @default(USD)
    balance       Float         @default(0)
    user          User          @relation(fields: [userId])
    userId        String
    transactions  Transaction[]
}

model Transaction {
    id            String            @id @default(cuid())
    createdAt     DateTime          @default(now())
    amount        Float
    account       Account           @relation(fields: [accountId])
    accountId     String
}

enum UserRole {
    ADMIN
    EMPLOYEE
}

enum Currency {
    USD
    EUR
    RUB
}
